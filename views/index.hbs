<h1>{{title}}</h1>

<div class="row" >
    <div class="col-sm-4">
    </div>
        <div class="col-sm-4">

            <form role="form" id="log-form">
              <div class="form-group" >
                <label for="inputUsername" class="control-label">Username</label>
                <input type="text" class="form-control input-lg required" id="inputUsername" aria-describedby="emailHelp" placeholder="Enter username">
                <small id="emailHelp" class="form-text text-muted">We'll never share your username with anyone else.</small>
              </div>
              <div class="form-group">
                <label for="inputPassword" class="control-label">Password</label>
                <input type="password" class="form-control input-lg required" id="inputPassword" placeholder="Password">
              </div>
              <div class="form-check">
              </div>
            <button type="submit" class="btn btn-warning btn-lg">Log in</button>
             </form>

        </div>
    <div class="col-sm-4">
    </div>

</div>